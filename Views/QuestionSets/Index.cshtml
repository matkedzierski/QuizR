@model List<QuizR.Models.QuestionSet>

@{
    ViewBag.Title = "Moje zestawy";
}

<h2>Moje zestawy pytań</h2>
<br />

<p>
    @Html.ActionLink("Dodaj zestaw", "Create", routeValues: null, new { @class = "btn btn-info" })
</p>

@if (Model.Count == 0)
{
    <div class="card border-warning" style="width: 40%; position: absolute; left: 50%; transform: translate(-50%, 0)">
        <div class="card-body">
            <h3 class="card-title">Brak zestawów!</h3>
            <p class="card-text">Nie masz jeszcze żadnych zestawów pytań.<br/>
            Użyj przycisku "Dodaj zestaw".</p>
        </div>
    </div>
    }
    else
    {
    <table class="table table-hover table-dark">
        <tr class="border-2 border-light table-primary">
            <th width="60%">Nazwa zestawu pytań</th>
            <th class="text-center">Liczba pytań</th>
            <th class="text-center">Akcje</th>
        </tr>
        @foreach (var item in Model)
        {
    <tr class="border-2 border-light">
        <td>
            @item.Name
        </td>
        <td class="text-center">
            @item.Questions.Count
        </td>
        <td class="text-center">
            @Html.ActionLink("Zarządzaj", "Manage", "Questions", new { id = item.ID }, new { @class = "btn btn-outline-info" })
            @Html.ActionLink("Zmień nazwę", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-warning" })
            @Html.ActionLink("Usuń", "Delete", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
        }


    </table>

    }
