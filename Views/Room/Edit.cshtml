@model QuizR.Models.QuizRoom

@{
    ViewBag.Title = "Edycja pokoju";
}

<h2>Edycja pokoju</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Nowe dane:</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(r => r.ID)



    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        @Html.LabelFor(model => model.Set, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("SetID", new SelectList(ViewBag.MySets, "Id", "Name"), new { @class = "form-control form-control-lg" })                                                          @{/*TODO*/}
            @Html.ValidationMessageFor(model => model.Set, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zapisz" class="btn btn-outline-success" />
            @Html.ActionLink("Powrót", "Index", routeValues: null, new { @class = "btn btn-outline-primary" })
        </div>
    </div>
</div>
}
