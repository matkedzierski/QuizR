@model QuizR.Models.QuestionSet

@{
    ViewBag.Title = "Zestaw";
}

<h2>@Model.Name</h2>
<br />

<p>
    @Html.ActionLink("Powrót", "Index", "QuestionSets", routeValues: null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Dodaj pytanie", "Create", new { setID = Model.ID }, new { @class = "btn btn-info" })
</p>

@if (Model.Questions.Count == 0)
{
    <div class="card border-warning" style="width: 40%; position: absolute; left: 50%; transform: translate(-50%, 0)">
        <div class="card-body">
            <h3 class="card-title">Brak pytań!</h3>
            <p class="card-text">W tym zestawie nie ma jeszcze żadnych pytań.<br/>
            Użyj przycisku "Dodaj pytanie".</p>
        </div>
    </div>
    }
    else
    {
    <table class="table table-hover table-dark">
        <tr class="border-2 border-light table-primary">
            <th width="60%">Treść pytania</th>
            <th>Akcje</th>
        </tr>
        @foreach (var item in Model.Questions)
        {
            <tr class="border-2 border-light">
                <td>
                    @item.Content
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.ID }, new { @class = "btn btn-outline-warning" })
                    @Html.ActionLink("Usuń", "Delete", new { id = item.ID }, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }


    </table>

    }
